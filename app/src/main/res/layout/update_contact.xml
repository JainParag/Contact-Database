<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Contact"
        android:textSize="25dp"
        android:gravity="center"
        android:id="@+id/tvUpdateContact"
        />


    <EditText
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Name"
        android:gravity="center"
        android:background="@drawable/edittext1"
        android:id="@+id/etName"/>

    <Button

        android:layout_marginTop="10dp"
        android:background="@drawable/buttonlwood"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="110dp"
        android:text="Search"
        android:id="@+id/bSearchName"
        android:onClick="searchNameUpdate"/>


    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="New Name"
        android:gravity="center"
        android:background="@drawable/edittext1"
        android:id="@+id/etUpdateName"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Number"
        android:gravity="center"
        android:background="@drawable/edittext1"
        android:id="@+id/etUpdateNumber"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:gravity="center"
        android:background="@drawable/edittext1"
        android:id="@+id/etUpdateEmail"/>

    <Button
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonlwood"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="110dp"
        android:text="Update"
        android:id="@+id/bUpdate"
        android:onClick="updateContact"/>

</LinearLayout>