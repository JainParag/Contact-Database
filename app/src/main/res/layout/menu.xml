<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    >



    <Button
        android:layout_marginLeft="90dp"
        android:layout_marginTop="100dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Add Contact"
        android:id="@+id/bAddContact"
        android:onClick="addContact"
        android:background="@drawable/buttonlwood"/>

    <Button
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="View Contact"
        android:id="@+id/bViewContact"
        android:onClick="viewContact"
        android:background="@drawable/buttonlwood"
        />

    <Button
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Delete Contact"
        android:id="@+id/bDeleteContact"
        android:onClick="deleteContact"
        android:background="@drawable/buttonlwood"
        />

    <Button
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Update Contact"
        android:id="@+id/bUpdateContact"
        android:onClick="updateContact"
        android:background="@drawable/buttonlwood"
        />

</LinearLayout>